doctype html
html(lang='ja')
  head
    block head
      include /google_analytics/index.pug
      link(crossorigin='anonymous',
           href='https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css',
           integrity='sha384-7tIwW4quYS2+TZCwuAPnUY+dRqg28ylzlIoVXAwpfiTs+CMKsAOSsWYQ96c/ZnV+',
           rel='stylesheet')
      link(rel='stylesheet', href='/web/common/layout.css')
      meta(charset='UTF-8')
  body
    #page
      #page_head_back
        header#page_head
          block top
            .toptitle
              h1.toptitle1
                | 東京理科大学サイエンスフェア学生企画
                br
              h1.toptitle2 みらい研究室実行委員会
          nav.global_navi
            ul
              li
                a(href='/web/')
                  | ホーム
                  br
                  | HOME
              li
                a(href='/web/event/')
                  | イベント情報
                  br
                  | EVENT
              li
                a(href='/web/contact/')
                  | お問い合わせ
                  br
                  | CONTACT
              li
                a(href='/web/link/')
                  | リンク
                  br
                  | LINK
              li
                a(href='/web/for_freshman/')
                  | 新入生向けページ
                  br
                  | for Freshman
      #page_body
        .topic_path_back
          p.topic_path
            block path
        article#page_body_main
          block article
        #page_body_sub
          block sidebar
            include /side_navi_event.pug
      footer#page_foot
        p#copyright
          small
            | Copyright © #{lastModified.getFullYear()}
            | 東京理科大学みらい研究室～科学へのトビラ～ All rights reserved.
            | #{lastModified.toLocaleString("ja", {timeZone: "Asia/Tokyo"})}
