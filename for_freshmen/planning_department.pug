extends /layout/index.pug

prepend contentSecurityPolicy
  - var defaultSrc = ['\'unsafe-inline\'', 'https://*.twimg.com/', 'https://*.twitter.com/']
  - var imgSrc = ['https://openclipart.org/image/300px/svg_to_png/', 'https://*.twimg.com/', 'https://*.twitter.com/']

append head
  script(async, src='https://platform.twitter.com/widgets.js')
  title 新入生向けページ | 東京理科大学みらい研究室

prepend header
  - var active = 'for_freshmen'

block article
  h1 企画班
  section
    h2 活動内容
    ul
      li 出展団体への参加依頼
      li 出展団体へ各種書類の送付及び修正
      li 出展団体への企画調整
    p など主に出展団体とのやりとりを行っております。
  section
    h2 こんな人はぜひ企画班へ
    ol
      li イベントが完成する様子を1から経験したい!
      li みらい研委員以外の団体とも交流したい!
      li メールの送り方を身につけたい!
    img(alt='メール配信のイラスト',
        src='https://openclipart.org/image/300px/svg_to_png/161449/mail-marketing.png',
        width='150')
    img(alt='交流のイラスト',
        src='https://openclipart.org/image/300px/svg_to_png/22366/nicubunu-Peer-to-peer.png'
        width='150')
    img(alt='子供達とのイラスト',
        src=require('./resource/illust2882.png'),
        width='150')

prepend sidebar
  ul.layout_sidebar.nav.flex-column.nav-pills(style='margin-bottom: auto; padding: 1rem; position: sticky; top: 1rem')
    li
      a.nav-link(href='.') 新歓TOP
    li
      a.nav-link.active(href='planning_department.html') 企画班
    li
      a.nav-link(href='public_relations_department.html') 広報班
    li
      | 最新のイベント情報をチェック!
      | Twitterでフォローしよう
      a.twitter-follow-button(data-show-count='false', data-size='large', href='https://twitter.com/_miraiken_')
        | @_miraiken_ をフォロー
